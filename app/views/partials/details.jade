article#message
  header
    dl.metadata
      dt Received
      dd {{selected.date | date: 'medium'}}
      dt From
      dd <{{selected.from[0].address}}> {{selected.from[0].name}}
      dt To
      dd <{{selected.to[0].address}}> {{selected.to[0].name}}
      dt Subject
      dd {{selected.subject}}
      dt Attachments
      dd
        ul
          li(ng-repeat='attachment in selected.received')
            {{attachment}}
    nav.views
      ul
        li.format.tab.selected
          a HTML
        li.format.tab
          a Plain Text
        li.format.tab
          a Source
        li.action
          a(ng-href='/emails/{{selected._id}}/download').button
            span Download
  iframe(ng-src='"/emails/" + selected + "/" + state.displayType')