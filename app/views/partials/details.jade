article#message
  header
    dl.metadata
      dt Received
      dd {{selected.date | date: 'medium'}}
      dt From
      dd <{{selected.from[0].address}}> {{selected.from[0].name}}
      dt To
      dd <{{selected.to[0].address}}> {{selected.to[0].name}}
      dt Subject
      dd {{selected.subject}}
      dt Attachments
      dd
        ul
          li(ng-repeat='attachment in selected.received')
            {{attachment}}
    nav.views
      ul(ng-init='state.displayType = "html"')
        li.format.tab(ng-class='{selected: state.displayType === "html"}')
          a(ng-click='state.displayType = "html"') HTML
        li.format.tab(ng-class='{selected: state.displayType === "text"}')
          a(ng-click='state.displayType = "text"') Plain Text
        li.format.tab(ng-class='{selected: state.displayType === "source"}')
          a(ng-click='state.displayType = "source"') Source
        li.action
          a(ng-href='/emails/{{selected._id}}/download', target='_blank').button
            span Download
  iframe(ng-if='state.displayType === "html"', ng-src='{{"/emails/" + selected._id}}')
  pre(ng-show='state.displayType === "source"') {{selected | json}}
  p(ng-show='state.displayType === "text"') {{selected.text}}