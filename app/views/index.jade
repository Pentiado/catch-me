doctype
html.no-js
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    base(href='/')
    title CatchMe
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width')
    // build:css styles/combined.css
    // bower:css
    // endbower
    link(rel='stylesheet', href='/bower_components/angular-ui/build/angular-ui.css')
    link(rel='stylesheet', href='/styles/fontello.css')
    link(rel='stylesheet', href='/styles/tooltip.css')
    link(rel='stylesheet', href='/styles/main.css')
    // endbuild

  body(ng-app='catchMeApp', ng-controller='MainController')
    header
      h1
        a(href='/') CatchMe
      nav.app
        ul
          li
            a.button(ng-click='clear()') Clear
          li
            a.button(href='/quit') Quit
    #messages(ng-include='"/partials/emails.html"')
    ng-include(ng-if='selected', src='"/partials/details.html"')

    script(src='/socket.io/socket.io.js')
    // build:js scripts/combined.js
    // bower:js
    script(src='/bower_components/angular/angular.js')
    script(src='/bower_components/angular-sanitize/angular-sanitize.js')
    script(src='/bower_components/angular-socket-io/socket.js')
    script(src='/bower_components/angular-bootstrap/ui-bootstrap-tpls.js')
    // endbower
    script(src='/bower_components/angular-ui/build/angular-ui.js')
    script(src='/scripts/app.js')
    script(src='/scripts/controllers/main.js')
    script(src='/scripts/factories/socket.js')
    script(src='/scripts/directives/iframe.js')
    // endbuild
