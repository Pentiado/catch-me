doctype
html.no-js
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    base(href='/')
    title CatchMe
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width')
    // build:css styles/combined.css
    // bower:css
    // endbower
    link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet', href='/styles/main.css')
    // endbuild

  body(ng-app='catchMeApp', ng-controller='MainController')
    header
      h1
        a(href='/') CatchMe
      nav.app
        ul
          li
            a(ng-click='clear()') Clear
          li
            a(ng-click='quit()') Quit
    nav#messages(ng-include='"/partials/emails.html"')
    #resizer
      .ruler
    ng-include(ng-show='selected', src='"/partials/details.jade"')

    script(src='/socket.io/socket.io.js')
    // build:js scripts/combined.js
    // bower:js
    script(src='/bower_components/angular/angular.js')
    script(src='/bower_components/angular-sanitize/angular-sanitize.js')
    script(src='/bower_components/angular-socket-io/socket.js')
    // endbower
    script(src='/scripts/app.js')
    script(src='/scripts/controllers/main.js')
    script(src='/scripts/factories/app.js')
    script(src='/scripts/factories/email.js')
    script(src='/scripts/factories/socket.js')
    // endbuild
